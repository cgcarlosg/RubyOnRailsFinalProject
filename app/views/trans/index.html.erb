<p id="notice"><%= notice %></p>

<div class="user-page d-flex flex-column align-items-center pt-2">

<h4 class="pt-5 pb-4">Transactions</h4>
<% @trans.each do |tran| %>

<div class="d-flex flex-row align-items-center widthsize mb-3 border-bottom">
  <div>
    <%= image_tag("comprando.jpg") %>
  </div>

  <div>
    <h5 class="ms-2 font-weight-light"><%= link_to tran.title, tran, class: "text-dark" %></h5>
    <p class="ms-2 mb-1 fontsizep"><%= tran.created_at.strftime("%d %B %Y") %></p>
    </div>

  
</div>
<% end %>

<div class="d-grid gap-2 widthsize">
<%= link_to 'New Tran', new_tran_path, class:"btn btn-primary" %>
</div>
 
</div>
