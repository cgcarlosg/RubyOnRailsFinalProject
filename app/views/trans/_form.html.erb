<p id="notice"><%= notice %></p>
<div class="container">
<%= form_with(model: tran) do |form| %>
  <% if tran.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tran.errors.count, "error") %> prohibited this tran from being saved:</h2>

      <ul>
        <% tran.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
  <%= form.label :title %><br/>
  <%= form.text_field :title, class:"form-control mt-4" %>
</div>
<br/>
<div class="field form-group">
  <%= form.label :total  %><br/>
  <%= form.number_field :total, class:"form-control mt-4" %>
</div>
<br/>
<div class="field form-group">
<%= form.label :category_id %><br/>
<%= collection_select(:tran, :category_id, Category.all, :id, :name, { :prompt=> '' }, class:"form-control mt-4" )%>
</div>
<br/>
<div class="d-grid gap-2">
<%= form.submit "Add Shopping", class: "btn btn-success btn-block group-content" %>
</div>
<br/>
<% end %>
</div>